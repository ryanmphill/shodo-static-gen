@frontmatter
{
    "title": "Check out the Blog Posts",
    "description": "Archive for example blog posts",
    "paginate": "shodo_get_articles",
    "per_page": "3"
}
@endfrontmatter

<div class="container">
<header class="page-header">
    <h1 class="page-header__title">Check out the Blog Posts</h1>
</header>
<main>
    {% for post in shodo_get_articles({ 
        "limit": pagination.per_page,
        "offset": pagination.per_page * (pagination.current_page - 1),
        "where": {
            "directory": { "starts_with": "/blog" }
        },
    }) %}
        <div>
            <a href="{{ post.path }}">{{ post.title or 'Untitled' }}</a>
            <div>
                {% for tag in post.tags %}
                    <span class="post-tag" style="border: 1px solid #ccc; border-radius: 3px; padding: 2px 5px; margin-right: 5px;">{{ tag }}</span>
                {% endfor %}
            </div>
            <div>Directory: {{ post.directory }}</div>
            <p>{{ shodo_get_excerpt(post.content, 100) }}</p>
        </div>

    {% endfor %}
    <div>
      {{ pagination.page_links }}
    </div>
</main>
<footer>
    <div><a href="/">Back to Home</a></div>
</footer>
</div>